{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "generateOptions": {
    "baseDir": "modules"
  },
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": ["@nestjs/swagger"],
    "assets": [
      {
        "include": "modules/mail/templates/**/*",
        "watchAssets": true,
        "outDir": "dist/modules/mail/templates"
      },
      {
        "include": "served/**/*",
        "watchAssets": true
      }
    ],
    "builder": {
      "type": "swc",
      "typeCheck": true,
      "options": {
        "extensions": [".ts", ".js"]
      }
    }
  }
}
