model Role {
  id          String         @id @default(uuid(7))
  name        String         @unique
  description String?
  createdAt   DateTime       @default(now())

  // relations
  rolePermissions RolePermission[]
  userRoles       UserRole[]

  // closure relations
  ancestorClosures RoleClosure[] @relation("ancestor")
  descendantClosures RoleClosure[] @relation("descendant")
}